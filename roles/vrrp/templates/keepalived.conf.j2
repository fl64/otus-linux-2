global_defs {
   notification_email {
     acassen@firewall.loc
     failover@firewall.loc
     sysadmin@firewall.loc
   }
   notification_email_from Alexandre.Cassen@firewall.loc
   smtp_server 192.168.200.1
   smtp_connect_timeout 30
   router_id LVS_DEVEL
   vrrp_skip_check_adv_addr
   vrrp_strict
   vrrp_garp_interval 0
   vrrp_gna_interval 0
}

vrrp_instance VI_1 {
    state BACKUP
    interface enp0s8
    virtual_router_id 100
    priority {{ ansible_enp0s8.ipv4.address.split('.')[3] }}
    advert_int 1
    authentication {
        auth_type PASS
        auth_pass 1111
    }
    virtual_ipaddress {
      10.0.0.100
    }

  {% if ansible_hostname == 'srv1' %}
  notify_master "/usr/bin/redis-cli slaveof no one; /usr/bin/redis-cli config rewrite"
  notify_backup "/usr/bin/redis-cli slaveof 10.0.0.20 6379; /usr/bin/redis-cli config rewrite"
  notify_fault "/usr/bin/redis-cli slaveof no one; /usr/bin/redis-cli config rewrite"
  {% endif %}

  {% if ansible_hostname == 'srv2' %}
  notify_master "/usr/bin/redis-cli slaveof no one; /usr/bin/redis-cli config rewrite"
  notify_backup "/usr/bin/redis-cli slaveof 10.0.0.10 6379; /usr/bin/redis-cli config rewrite"
  notify_fault "/usr/bin/redis-cli slaveof no one; /usr/bin/redis-cli config rewrite"
  {% endif %}

}

